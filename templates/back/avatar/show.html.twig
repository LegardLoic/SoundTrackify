{% extends "back/base_back.html.twig" %}
{% block title %}{{ avatar.name }}{% endblock %}
{% block body %}
  <!--    Page container start  -->
  <div class="container-fluid px-2 px-md-4">
    <div class="page-header min-height-300 border-radius-xl mt-4" style="background-image: url('{{ asset("img/back/BannerHead.jpg") }}');">
      <span class="mask  bg-gradient-primary  opacity-6"></span>
    </div>
    <div class="card card-body mx-3 mx-md-4 mt-n6">
      <div class="row row-list gx-4 mb-2">
        <div class="col-auto">
          <div class="avatar avatar-xl position-relative">
            <img src="{{ avatar.poster }}" alt="image de {{ avatar.name }}" class="w-100 border-radius-lg shadow-sm">
          </div>
        </div>
        <div class="col-auto my-auto">
          <div class="h-100">
            <h5 class="mb-1">{{ avatar.name }}</h5>
            <p class="mb-0 font-weight-normal text-sm">ID : {{ avatar.id }}</p>
          </div>
        </div>
        <div class="col-lg-6 col-md-6 my-sm-auto ms-sm-auto me-sm-0 mx-auto mt-3">
          <div class="showbutton nav-wrapper end-0">
            <ul class="nav nav-pills nav-fill p-1" role="tablist">
              <li class="nav-item d-flex align-items-center">
                <a class="btn btn-outline-primary btn-sm mb-0 me-3" href="{{ path('app_back_avatar_edit', {'id': avatar.id}) }}">Edit</a>
              </li>
              <li class="nav-item d-flex align-items-center">
                <a class="btn btn-outline-primary btn-sm mb-0 me-3" href="{{ path('app_back_avatar_index') }}">Retour Ã  la liste</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="row">
          <div class="col-12 col-xl-12">
            <ul class="list-group">
              <li class="list-group-item border-0 ps-0 pt-0 text-sm text-show"><strong class="text-dark">Date d'ajout:</strong> &nbsp; {{ avatar.createdAt ? avatar.createdAt|date('Y-m-d') : '' }}</li>
              <li class="list-group-item border-0 ps-0 text-sm text-show"><strong class="text-dark">Date de modification:</strong> &nbsp; {{ avatar.updatedAt ? avatar.updatedAt|date('Y-m-d H:i:s') : '' }}</li>
            </ul>
            <div class="card card-plain h-100">
              <div class="card-body p-3">
                <div class="deleteButton">
                  {{ include('back/avatar/_delete_form.html.twig') }}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>    
  <!--    Page container end   -->
{% endblock %}
