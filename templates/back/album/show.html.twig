{% extends "back/base_back.html.twig" %}
{% block title %}{{ album.name }}{% endblock %}
{% block body %}
  <div class="container-fluid px-2 px-md-4">
    <div class="page-header min-height-300 border-radius-xl mt-4" style="background-image: url('{{ asset("img/back/BannerHead.jpg") }}');">
      <span class="mask  bg-gradient-primary  opacity-6"></span>
    </div>
    <div class="card card-body mx-3 mx-md-4 mt-n6">
      <div class="row row-list gx-4 mb-2">
        <div class="col-auto">
          <div class="avatar avatar-xl position-relative">
            <img src="{{ album.poster }}" alt="pochette de {{ album.name }}" class="w-100 border-radius-lg shadow-sm">
          </div>
        </div>
        <div class="col-auto my-auto">
          <div class="h-100">
            <h5 class="mb-1">{{ album.name }}</h5>
            <p class="mb-0 font-weight-normal text-sm">ID : {{ album.id }}</p>
          </div>
        </div>
        <div class="col-lg-6 col-md-6 my-sm-auto ms-sm-auto me-sm-0 mx-auto mt-3">
          <div class="showbutton nav-wrapper end-0">
            <ul class="nav nav-pills nav-fill p-1" role="tablist">
              <li class="nav-item d-flex align-items-center">
                <a class="btn btn-outline-primary btn-sm mb-0 me-3" href="{{ path('app_back_album_edit', {'id': album.id}) }}">Edit</a>
              </li>
              <li class="nav-item d-flex align-items-center">
                <a class="btn btn-outline-primary btn-sm mb-0 me-3" href="{{ path('app_back_album_index') }}">Retour à la liste</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="row">
          <div class="col-12 col-xl-12">
            <ul class="list-group">
              <li class="list-group-item border-0 ps-0 text-sm text-show"><strong class="text-dark">Date de sortie:</strong> &nbsp;  {{ album.releaseDate ? album.releaseDate|date('Y-m-d') : '' }}</li>
              <li class="list-group-item border-0 ps-0 pt-0 text-sm text-show"><strong class="text-dark">Date d'ajout:</strong> &nbsp; {{ album.createdAt ? album.createdAt|date('Y-m-d') : '' }}</li>
              <li class="list-group-item border-0 ps-0 text-sm text-show"><strong class="text-dark">Date de modification:</strong> &nbsp; {{ album.updatedAt ? album.updatedAt|date('Y-m-d H:i:s') : '' }}</li>
            </ul>
            <div class="card card-plain h-100">
              <div class="card-header card-header-show pb-0 p-3">
                <div class="row">
                  <div class="col-md-8 d-flex align-items-center">
                    <h6 class="mb-0">Theme principale</h6>
                  </div>
                </div>
              </div>
              <div class="card-body p-3">
                <p class="text-sm">
                  <audio controls>
                    <source src="{{ album.mainThemeUrl }}" type="audio/mp3">
                    Votre navigateur ne prend pas en charge l'élément audio.
                  </audio>
                </p>
                <div class="deleteButton">
                  {{ include('back/album/_delete_form.html.twig') }}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
