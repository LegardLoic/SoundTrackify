    <div class="col-xl-4 col-md-6 col-sm-12 mb-6">
      <div class="card dashboard-card">
        <div class="card-header p-3 pt-2">
          <div class="icon-box icon-box-lg text-center mt-n4 position-absolute">
            <i class="material-icons text-white opacity-10">sports_esports</i>
          </div>
          <div class="text-end pt-1">
            <p class="text-sm mb-0 text-capitalize">{{ videogames|length }} enregistrements</p>
            <h4 class="mb-0">Les Jeux-Videos</h4>
          </div>
        </div>
        <h6 class="mb-0 mx-3 text-sm">Dernier ajout</h6>
        <hr class="horizontal-dark-line my-0">
        <div class="card-footer dashboardfooter-class p-3">
          <div class="dashbordcard-footer d-flex">
            {% for videogameDetail in videogame %}
              <div class="dashbordcard-detail-footer d-flex">
                <img src="{{ videogameDetail.poster }}" class="avatar avatar-sm me-3 border-radius-lg" alt="jacquette de {{ videogameDetail.name }}">
                <p class="mb-0 text-sm">{{ videogameDetail.name|slice(0, 20) }}...<span class="text-successfont-weight-bolder fst-italic dashboard-date">le {{ videogameDetail.createdAt|date('d-m-Y') }}</span></p>
              </div>
              <a class="material-icons opacity-10" href="{{ path('app_back_videogame_show', {id: videogameDetail.id}) }}">
                <i class="dashborad-view-icon">visibility</i>
              </a>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
