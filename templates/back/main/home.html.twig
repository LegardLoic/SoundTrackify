{% extends 'back/base_back.html.twig' %}
{% block title %}DashBoard SoundTrackify{% endblock %}
{% block body %}
<div class="page-header border-radius-xl mt-4">
  <span class="mask  bg-gradient-primary  opacity-1"></span>
</div>
