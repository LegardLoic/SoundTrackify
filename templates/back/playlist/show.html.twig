{% extends "back/base_back.html.twig" %}
{% block title %}{{ playlist.name }}{% endblock %}
{% block body %}
  <!--    Page container start  -->
  <div class="container-fluid px-2 px-md-4">
    <div class="page-header min-height-300 border-radius-xl mt-4" style="background-image: url('{{ asset("img/back/BannerHead.jpg") }}');">
      <span class="mask  bg-gradient-primary  opacity-6"></span>
    </div>
    <div class="card card-body mx-3 mx-md-4 mt-n6">
      <div class="row row-list gx-4 mb-2">
        <div class="col-auto my-auto">
          <div class="h-100">
            <h5 class="mb-1">{{ playlist.name }}</h5>
            <p class="mb-0 font-weight-normal text-sm">ID : {{ playlist.id }}</p>
          </div>
        </div>
        <div class="col-lg-6 col-md-6 my-sm-auto ms-sm-auto me-sm-0 mx-auto mt-3">
          <div class="showbutton nav-wrapper end-0">
            <ul class="nav nav-pills nav-fill p-1" role="tablist">
              <li class="nav-item d-flex align-items-center">
                <a class="btn btn-outline-primary btn-sm mb-0 me-3" href="{{ path('app_back_playlist_edit', {'id': playlist.id}) }}">Edit</a>
              </li>
              <li class="nav-item d-flex align-items-center">
                <a class="btn btn-outline-primary btn-sm mb-0 me-3" href="{{ path('app_back_playlist_index') }}">Retour Ã  la liste</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="row">
          <div class="col-12 col-xl-12">
            <ul class="list-group">
              <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">Date d'ajout:</strong> &nbsp; {{ playlist.createdAt ? playlist.createdAt|date('Y-m-d') : '' }}</li>
              <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Date de modification:</strong> &nbsp; {{ playlist.updatedAt ? playlist.updatedAt|date('Y-m-d H:i:s') : '' }}</li>
            </ul>
            <div class="card card-plain h-100">
              <div class="card-body p-3">
                <div class="table-responsive p-0">
                  <table class="table align-items-center mb-0">
                    <thead>
                      <tr>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">id</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Name</th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Time</th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">actions</th>
                        <th class="text-secondary opacity-7"></th>
                      </tr>
                    </thead>
                    <tbody>
                      <!--    table row start  -->
                      {% for music in playlist.musics %}
                      <tr>
                        <td class="align-middle">
                          <span class="text-secondary text-xs font-weight-bold px-3">{{ music.id }}</span>
                        </td>
                        <td>
                          <div class="d-flex flex-column justify-content-center">
                            <h6 class="mb-0 text-sm">{{ music.name }}</h6>
                          </div>
                        </td>
                        <td class="text-center">
                          <p class="text-xs font-weight-bold mb-0 align-middle">{{ music.time|date('H:i:s') }}</p>
                        </td>
                        <td class="text-center">
                          <a class="material-icons opacity-10 px-2 icon-list" href="{{ path('app_back_music_show', {'id': music.id}) }}">
                            <i>visibility</i>
                          </a>
                        </td>
                      </tr>
                      <!--    table row end  -->
                    {% else %}
                      <tr>
                        <td colspan="8">no records found</td>
                      </tr>
                    {% endfor %}
                    </tbody>
                  </table>
                </div>
                <div class="deleteButton">
                  {{ include('back/playlist/_delete_form.html.twig') }}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--    Page container end   -->
{% endblock %}
